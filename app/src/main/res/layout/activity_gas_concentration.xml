<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/layout_gas"
    tools:context=".gas_concentration">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#D8C414"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="@string/concentration"/>
    </LinearLayout>

        <GridLayout
            android:columnOrderPreserved="true"
            android:alignmentMode="alignMargins"
            android:rowCount="3"
            android:layout_marginTop="25dp"
            android:columnCount="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:id="@+id/ch4_progress"
                        app:cpb_start_angle="0"
                        app:cpb_background_progressbar_width="8dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="@color/colorPrimary"
                        app:cpb_progressbar_width="10dp"
                        app:cpb_progress="0"
                        app:cpb_progress_max="100" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:padding="5dp"
                        android:text="@string/methane"
                        android:textColor="#000000" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:id="@+id/ch4_per"
                    android:textColor="#000000"
                    android:layout_marginTop="54dp"
                    android:layout_marginStart="58dp"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cpb_start_angle="0"
                        android:id="@+id/co2_progress"
                        app:cpb_background_progressbar_width="8dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="@color/colorPrimary"
                        app:cpb_progressbar_width="10dp"
                        app:cpb_progress="0"
                        app:cpb_progress_max="100" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="@string/carbon"
                        android:textColor="#000000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="@string/dioxide"
                        android:textColor="#000000" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:id="@+id/co2_per"
                    android:textColor="#000000"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="58dp"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        app:cpb_start_angle="0"
                        android:id="@+id/co_progress"
                        app:cpb_background_progressbar_width="8dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="@color/colorPrimary"
                        app:cpb_progressbar_width="10dp"
                        app:cpb_progress="0"
                        app:cpb_progress_max="100" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="@string/carbon"
                        android:textColor="#000000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="@string/monoxide"
                        android:textColor="#000904" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:id="@+id/co_per"
                    android:textColor="#000000"
                    android:layout_marginTop="54dp"
                    android:layout_marginStart="58dp"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cpb_start_angle="0"
                        android:id="@+id/h2s_progress"
                        app:cpb_background_progressbar_width="8dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="@color/colorPrimary"
                        app:cpb_progressbar_width="10dp"
                        app:cpb_progress="0"
                        app:cpb_progress_max="100" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="@string/hydrogen"
                        android:textColor="#000000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="@string/sulphide"
                        android:textColor="#000000" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginTop="50dp"
                    android:textColor="#000000"
                    android:id="@+id/h2s_per"
                    android:layout_marginStart="58dp"/>
            </androidx.cardview.widget.CardView>
        </GridLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="176dp"
                android:layout_height="163dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cpb_background_progressbar_width="8dp"
                        app:cpb_progress="0"
                        android:id="@+id/ch3_progress"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progress_max="100"
                        app:cpb_progressbar_color="@color/colorPrimary"
                        app:cpb_progressbar_width="10dp"
                        app:cpb_start_angle="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ammonia"
                        android:textColor="#000904"
                        android:textSize="13sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:id="@+id/ch3_per"
                    android:textColor="#000000"
                    android:layout_marginTop="52.5dp"
                    android:layout_marginStart="58dp"/>
            </androidx.cardview.widget.CardView>

</LinearLayout>